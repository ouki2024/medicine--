

<div class = "container">
  <div class = "row">
    <div class = "mx-auto">
      <h2>ログイン</h2>

      <div class ="row">

        <%= form_with model: @user, url: user_session_path do |f| %>
          <div class="field">
            <%= f.label :ニックネーム %><br />
            <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
          </div>

          <div class="field">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Log in" %>
          </div>
        <% end %>


      </div>
      <%= render "devise/shared/links" %>
    </diV>
  </div>
</div>
