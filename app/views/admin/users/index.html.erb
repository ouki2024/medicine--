

<div class="container">
  <div class="row">
    <h2>会員一覧</h2>

      <table class="table">
        <thead>
        <tr>
          <th>会員ID</th>
          <th>ニックネーム</th>
          <th>メールアドレス</th>
          <th>リンク先</th>
          <th></th>
        </tr>
      </thead>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td>
              <%= image_tag user.get_profile_image(70,70) %><br>
              <%= user.nickname %>
            </td>
            <td><%= user.email %></td>
            <td><%= link_to '会員詳細ページへ', admin_user_path(user) %></td>
            <td><%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
          </tr>
        <% end %>

      </table>
      <%= paginate @users %>
    </div>
  </div>