<h2>レビュー詳細ページ</h2>




        <div>

            <p>ユーザー：<%= @review.nickname %></p>
            <p>性別：<%= @review.gender %></p>
            <p>年代：<%= @review.age %></p>
            <p>住所：<%= @review.address %></p>
            <p>病院：<%= @review.hospital %>病院</p>
            <p>診療科：<%= @review.clinical_department %>科</p>
            <p>お薬受け取り場所：<%= @review.pharmacy %></p>
            <p>訪問回数：<%= @review.use_count %>回</p>
            <p>来訪月：<%= @review.visit_month %>月</p>
            <p>感想：<%= @review.content %></p>

        <% @review.tags.each do |tag| %>
             <span><%= tag.name %></span>
        <% end %>

        </div>



            <%= link_to '削除', admin_review_path(@review), method: :delete, data: {confirm: "本当に消しますか？"} %>
            |
            <%= link_to '投稿一覧', admin_reviews_path %>





        <div>
            <p>コメント数：<%= @review.review_comments.count %></p>
            <% @review.review_comments.each do |review_comment| %>
                <p><%= image_tag review_comment.user.get_profile_image(100,100) %></p>
                <%= review_comment.user.nickname %>
                <!--#コメントした日-->
                <!--<%= review_comment.created_at.strftime('%Y/%m/%d') %><br>-->
                <%= review_comment.comment %>





            <% end %>
